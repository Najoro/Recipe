{% extends 'base.html.twig' %}

{% block title %}
	Recette
{% endblock %}

{% block body %}
	<div class="container mt-2">
		<h1>Liste des Recettes</h1>
		<a class="btn btn-primary mb-2" href={{path('creat_recipe')}}>Nouvelle recette</a>
		<table class="table table-striped table-inverse table-responsive">
			<thead class="thead-inverse">
				<tr>
					<th>Titre</th>
					<th>Duree</th>
					<th>Action</th>
				</tr>
				</thead>
				<tbody>
        {% for recipe in recipes %}

					<tr>
						<td scope="row"><a href={{ path('recipe_show', {id : recipe.id , slug : recipe.slug} ) }}>{{recipe.title}}</a></td>
						<td>{{recipe.durations}} minute</td>
						<td>
							<a class="btn btn-warning btn-sm" href={{path("recipe_edite" , {id: recipe.id})}}>Editer</a>
							<a class="btn btn-danger btn-sm" href={{path("recipe_delete" , {id: recipe.id})}}>Supprimer</a>
						</td>
					</tr>
        {% endfor %}

				</tbody>
		</table>
	</div>

{% endblock %}
